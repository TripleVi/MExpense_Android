<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- List Item -->
    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Currency2" parent="TextAppearance.App.Currency1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Label.Currency1" parent="TextAppearance.App.Currency1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Currency1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dollar_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Heading1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#8C8C8C</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.App.Heading6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#BFBFBF</item>
    </style>

    <style name="TextAppearance.App.Heading6.Bold" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#8B8B8B</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItem.CardView" parent="">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="Theme.Form" parent="">
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.OutlinedBox</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/purple_500</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="startIconTint">?attr/colorPrimary</item>
    </style>

</resources>